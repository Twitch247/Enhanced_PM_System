<?xml version="1.0"?>
<!DOCTYPE modification SYSTEM "http://www.simplemachines.org/xml/modification">
<modification xmlns="http://www.simplemachines.org/xml/modification" xmlns:smf="http://www.simplemachines.org/">
<id>Dougiefresh:SentItems</id>
<version>2.3</version>

<!---------------------------------------------------------------------------->
<!-- Fix of extremely stupid bug introduced by version 2.2					-->
<!---------------------------------------------------------------------------->
<file name="$sourcedir/PersonalMessage.php">
	<operation>
		<search position="replace"><![CDATA[$lastData = array('pms' => array());]]></search>
		<add><![CDATA[$lastData = array();]]></add>
	</operation>
	<operation>
		<search position="replace"><![CDATA[if ($context['display_mode'] == 2 && !empty($pmID) && in_array($pmID, $lastData['id']))
		fatal_lang_error('no_access', false);]]></search>
		<add><![CDATA[if ($context['display_mode'] == 2 && !empty($pmID) && $pmID != $lastData['id'])
		redirectexit('action=pm;pmid=' . $lastData['id'] . ';kstart;f=' . $context['folder'] . ';start=0;sort=date;#msg' . $lastData['id']);]]></add>
	</operation>
</file>
</modification>