<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Dougiefresh:Enhanced_PM_System</id>
	<name>Enhanced PM System</name>
	<type>modification</type>
	<version>2.5</version>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<database>edit_db.php</database>
		<modification type="file">install.xml</modification>
		<modification type="file">language_english.xml</modification>
		<modification type="file">language_english-utf8.xml</modification>
		<modification type="file">language_english_british.xml</modification>
		<modification type="file">language_english_british-utf8.xml</modification>
		<modification type="file">language_portuguese_pt.xml</modification>
		<modification type="file">language_portuguese_pt-utf8.xml</modification>
		<require-file name="eps_mail_read.png" destination="$imagesdir/buttons" />
		<require-file name="eps_mail_reply.png" destination="$imagesdir/buttons" />
		<require-file name="eps_mail_unread.png" destination="$imagesdir/buttons" />
		<require-file name="eps_mail_unsend.png" destination="$imagesdir/buttons" />
	</install>
	<uninstall for="2.0 - 2.0.99">
		<readme parsebbc="true">uninstall.txt</readme>
		<modification type="file" reverse="true">install.xml</modification>
		<modification type="file" reverse="true">language_english.xml</modification>
		<modification type="file" reverse="true">language_english-utf8.xml</modification>
		<modification type="file" reverse="true">language_english_british.xml</modification>
		<modification type="file" reverse="true">language_english_british-utf8.xml</modification>
		<modification type="file" reverse="true">language_portuguese_pt.xml</modification>
		<modification type="file" reverse="true">language_portuguese_pt-utf8.xml</modification>
		<remove-file name="$imagesdir/buttons/eps_mail_read.png" />
		<remove-file name="$imagesdir/buttons/eps_mail_reply.png" />
		<remove-file name="$imagesdir/buttons/eps_mail_unread.png" />
		<remove-file name="$imagesdir/buttons/eps_mail_unsend.png" />
	</uninstall>

	<upgrade from="2.0">
		<modification>upgrade_2.1.xml</modification>
		<modification>upgrade_2.2.xml</modification>
		<modification>upgrade_2.3.xml</modification>
		<modification>upgrade_2.4.xml</modification>
		<modification>upgrade_2.5.xml</modification>
	</upgrade>
	<upgrade from="2.1">
		<modification>upgrade_2.2.xml</modification>
		<modification>upgrade_2.3.xml</modification>
		<modification>upgrade_2.4.xml</modification>
		<modification>upgrade_2.5.xml</modification>
	</upgrade>
	<upgrade from="2.2">
		<modification>upgrade_2.3.xml</modification>
		<modification>upgrade_2.4.xml</modification>
		<modification>upgrade_2.5.xml</modification>
	</upgrade>
	<upgrade from="2.3">
		<modification>upgrade_2.4.xml</modification>
		<modification>upgrade_2.5.xml</modification>
	</upgrade>
	<upgrade from="2.4">
		<modification>upgrade_2.5.xml</modification>
	</upgrade>
</package-info>